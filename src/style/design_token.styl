:root
  // 圆角
  --radius 4px
  --radius_2x 8px
  // 通用色
  --color_theme #0c66fd
  --color_warning #f69b1b
  --color_success #1bc789
  --color_active #585d64
  // 文字色
  --text_color_main #131313
  --text_color_sub #555
  --text_color_weak #999
  --text_color_alt #fff
  // 背景色
  --bg_color_main #fff
  --bg_color_sub #f4f4f7
  --bg_color_alt #212121
  --bg_color_active #eaf2ff
  // 边框色
  --border_color #e6e7e7
  --border_color_form #888
  --border_color_active #131313
  // 页面间距
  --padding_n 12px
  --padding_s 8px
  --margin_l 12px
  --margin_n 8px
  --margin_s 4px
  // 2x 值
  --padding_2n 24px
  --padding_2s 16px
  --margin_2l 24px
  --margin_2n 16px
  --margin_2s 8px
  // 表单尺寸
  --form_height_n 28px
  --form_height_2n 56px
  // 动画
  --ani_base 120ms all ease-out
  --ani_slow 240ms all ease-in-out

// 文字属性定义
p, a, button
  color var(--text_color_main)
  font-size 22px
  line-height 32px
  zoom .5
  &.bold
    font-weight 900
  &.small
    color var(--text_color_weak)
    font-size 18px
    line-height 24px
  &.main
    color var(--text_color_main)
  &.sub
    color var(--text_color_sub)
  &.weak
    color var(--text_color_weak)
  &.theme
    color var(--text_color_theme)
  &.warning
    color var(--text_color_warning)
  &.succese
    color var(--text_color_succese)
  &.alt
    color var(--text_color_alt)

h2
  margin -4px 0
  color var(--text_color_main)
  font-weight 900
  font-size 22px
  line-height 32px
  zoom .5