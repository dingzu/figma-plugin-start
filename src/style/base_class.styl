// 工具类
section, .section
    padding var(--padding_n)

div.divide
    width 100%
    height 1px
    background-color var(--border_color)

.flex
    display flex
    flex-direction row
    align-items flex-start
    gap var(--margin_n)

button
    display block
    padding 0 var(--padding_2s)
    height var(--form_height_2n)
    border-radius var(--radius_2x)
    zoom .5